<UserControl x:Class="ContragentAnalyse.Controls.Risk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContragentAnalyse.Controls"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid Name="CurrentGrid">

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Введите БИН" Margin="5,0"/>
                    <TextBox MinWidth="50" Margin="5,0"/>
                    <TextBlock Text="Введите наименование" Margin="5,0"/>
                    <TextBox MinWidth="250" Margin="5,0"/>
                    <Button Content="Поиск" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <GroupBox Header="Выберете из предложенных Банков/Юр.лиц" Margin="10,20" >
                        <ListBox Margin="5" Width="600" Height="100">

                        </ListBox>
                    </GroupBox>
                </StackPanel>
                <GroupBox Header="Критерии риска" Margin="10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <ListView MinWidth="300" MaxWidth="650" MinHeight="20" Height="297" Width="650">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn/>
                                    </GridView>
                                </ListView.View>
                                <CheckBox Content="Наличие действующих блокирующих санкций в отношении акционера, владеющего менее 45% капитала Клиента, и/или Члена органа управления Клиента"/>
                                <CheckBox Content="Наличие действующих секторальных санкций в отношении Клиента и/или акционера Клиента"/>
                                <CheckBox Content="Установлен факт связи Клиента и/или лиц, которые по отдельности или в совокупности владеют более чем 50% капитала Клиента, и/или Бенефициарного владельца Клиента с непризнанной Российской Федерацией территорией и/или Члена органа управления Клиента со  страной/территорией, указанной в Первой группе государств и территорий Приложения №1 Инструкции №1361"/>
                                <CheckBox Content="Клиент и/или его акционер и/или Бенефициарный владелец Клиента и/или дочерняя компания и/или филиал/представительство Клиента зарегистрировано (инкорпорировано) (место жительства или место нахождения)  на территории, указанной во Второй группе государств и территорий Приложения №1 Инструкции №1361 "/>
                                <CheckBox Content="Акционер Клиента и/или Бенефициарный владелец Клиента и/или Член органа управления Клиента является ПДЛ/РДЛ и/или Ближайшим окружением ПДЛ/РДЛ"/>
                                <CheckBox Content="Наличие информации в отношении Клиента и/или его акционера и/или Члена органа управления Клиента и/или Бенефициарного владельца Клиента, полученной из открытых источников, заслуживающих доверия, и/или во внутренних ресурсах и системах Банка, вызывающей по оценке ОМК подозрения в том, что целью заключения сотрудничества может являться совершение операций в целях легализации (отмывания) доходов, полученных преступным путем, финансирования терроризма и финансирования распространения оружия массового уничтожения"/>
                                <CheckBox Content="Наличие информационных сообщений, из заслуживающих доверия источников информации, о финансовом оздоровлении и/или назначении временной администрации и/или недостаточности капитала и/или несоблюдении нормативов Клиентом и/или банкротстве основного акционера Клиента и/или о введении в отношении Клиента запрета на привлечение денежных средств физических лиц во вклады и (или) открытие и ведение банковских счетов физических лиц"/>
                                <CheckBox Content="Отсутствие по адресу места нахождения Клиента-резидента Российской Федерации его постоянно действующего органа, иных органов или лиц, имеющих право действовать от имени Клиента без доверенности"/>
                                <CheckBox Content="Присутствие акционера, владеющего более 50% капитала Клиента, и/или Бенефициарного владельца Клиента в БД Репутационные риски Банка"/>
                                <CheckBox Content="Несоответствие внутренних процедур банка в сфере ПОД/ФТ/ФРОМУ рекомендациям FATF"/>
                                <CheckBox Content="Предупреждение/штрафы со стороны надзорного органа в связи с неисполнением/ненадлежащим исполнением законодательства в области ПОД/ФТ/ФРОМУ за последние 2 года"/>
                                <CheckBox Content="Отсутствие процедур, регламентирующих отношения с ПДЛ/PДЛ и Ближайшим окружением ПДЛ/РДЛ."/>
                                <CheckBox Content="Наличие доступа третьих лиц к корреспондентским счетам, открытых у Клиента и банка-корреспондента, с которым у третьих лиц нет корреспондентских счетов (практика «сквозных» счетов)"/>
                                <CheckBox Content="Несоответствие внутренних процедур банка общепризнанным стандартам «Знай своего клиента»"/>
                                <CheckBox Content="Осуществление неполной и/или нерегулярной оценки/переоценки уровня риска клиентов"/>
                                <CheckBox Content="Открытие счетов на анонимных владельцев и/или открытие первого счета без личного присутствия физического лица, его идентификации и/или оценки риска"/>
                                <CheckBox Content="Более 10% высокорисковых клиентов (осуществляющих интенсивный оборот наличности, Money Service Business и т.п.)"/>
                                <CheckBox Content="Не проводится проверка достоверности информации, полученной в ходе идентификации"/>
                                <CheckBox Content="Только ручной мониторинг операций клиентов"/>
                                <CheckBox Content="Применение недостаточных мер в отношении клиентов, неоднократно осуществлявших необычные/подозрительные операции"/>
                                <CheckBox Content="Отсутствие процедур по выявлению операций, проводимых в рамках ухода от процедур контроля по ПОД/ФТ/ФРОМУ, в т.ч. по выявлению необычных операций"/>
                                <CheckBox Content="Осуществление неполной и/или нерегулярной оценки риска операций клиента"/>
                                <CheckBox Content="Отсутствие процедур по выявлению операций с подставными или фиктивными компаниями («shell company»)"/>
                                <CheckBox Content="Отсутствие процедур по установлению источника происхождения денежных средств и контроля операций клиентов-ПДЛ/РДЛ и Ближайшего окружения ПДЛ/РДЛ."/>
                                <CheckBox Content="Только ручная обработка платежей на предмет контроля страновых и санкционных ограничений"/>
                                <CheckBox Content="Отсутствие ограничений и достаточных контролей при принятии на обслуживание и обслуживании лиц/лиц-резидентов государств/территорий, находящихся под действующими санкциями/ограничениями"/>
                                <CheckBox Content="Отсутствие ограничений и достаточных контролей при принятии на обслуживание и обслуживании клиентов, зарегистрированных во Второй группе государств и территорий Приложения №1 Инструкции №1361 («офшорные» государства/территории)"/>
                                <CheckBox Content="Не разработаны процедуры/политики, направленные на минимизацию санкционных и страновых рисков"/>
                                <CheckBox Content="Банком выявлены необычные операции"/>
                                <CheckBox Content="Запросы по платежу со стороны НОСТРО-банка"/>
                                <CheckBox Content="Нарушение Клиентом условий договора"/>

                            </ListView>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Итоговый балл (Уровень риска Клиента):" MinWidth="220"/>
                            <TextBox x:Name="ItogRisk" MinWidth="300" IsEnabled="False"/>
                            <Button x:Name="ItogRiskButton"   Width="150" Height="25" Content="Посчитать" IsEnabled="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Несоответствие банковских продуктов:" MinWidth="220"/>
                            <ListBox x:Name="BankProduct" Margin="5" MinWidth="300" Height="100" IsEnabled="False">
                            </ListBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Оценка комплаенс риска завершена" MinWidth="225"/>
                            <CheckBox  Width="300" Click="CheckBox_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Дата пересмотра:" Width="225"/>
                            <DatePicker x:Name="DateRevision" Width="150" IsEnabled="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="История:" Width="225"/>
                            <TextBlock Text="История" TextWrapping="Wrap" MinHeight="300" MinWidth="300" IsEnabled="False" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Right">
                            <Button x:Name="RedactHistory" Width="150" Height="25" Content="Редактировать" Click="Redact_Click"/>
                            <Button x:Name="SaveHistoryTime" Width="150" Height="25" Content="Сохранить историю" Click="SaveHistoryTime_Click"/>
                            <Button Width="150" Height="25" Content="Выгрузить историю" Click="Button_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
