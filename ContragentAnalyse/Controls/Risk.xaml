<UserControl x:Class="ContragentAnalyse.Controls.Risk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContragentAnalyse.Controls"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        
        <Grid Name="CurrentGrid">

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Введите БИН" Margin="5,0"/>
                    <TextBox MinWidth="50" Margin="5,0"/>
                    <TextBlock Text="Введите наименование" Margin="5,0"/>
                    <TextBox MinWidth="250" Margin="5,0"/>
                    <Button Content="Поиск" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <GroupBox Header="Выберете из предложенных Банков/Юр.лиц" Margin="10,20" >
                        <ListBox Margin="5" Width="600" Height="100">

                        </ListBox>
                    </GroupBox>
                </StackPanel>
                <GroupBox Header="Критерии риска" Margin="10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <ListView MinWidth="300" MaxWidth="650" MinHeight="20">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn/>
                                    </GridView>
                                </ListView.View>
                                <CheckBox Content="SDN в отношении акционера или ОУ"/>
                                <CheckBox Content="Секторальные санкции в отношении Кл или акционера"/>
                                <CheckBox Content="Связь ОУ с 1 гр"/>
                                <CheckBox Content="Акционер / дочка / филиал / представ-во зарегистрировано во 2 гр (оффшор)"/>
                                <CheckBox Content="Акционер / БВ / ОУ явл ПДЛ/РДЛ/БО"/>
                                <CheckBox Content="Негативная инф-я"/>
                                <CheckBox Content="Неудовлетв оценка тек фин положения"/>
                                <CheckBox Content="Отсутствие по адресу места нахождения постоянно действ-го органа"/>
                                <CheckBox Content="Репутационные риски"/>
                                <CheckBox Content="Несоответствие внутренней политики банка в сфере ПОД/ФТ/ФРОМУ рекомендациям FATF"/>
                                <CheckBox Content="Предупреждение/штрафы со стороны регулятора в области ПОД/ФТ/ФРОМУ за 2 года"/>
                                <CheckBox Content="Отсутствие процедур по ПДЛ/РДЛ/БО"/>
                                <CheckBox Content="Наличие доступа 3х лиц к к/с (сквозные счета)"/>
                                <CheckBox Content="Несоотв-е внутр процедур принципам и политикам KYC"/>
                                <CheckBox Content="Осущ-е неполной / нерегулярной оцеки/переоценки ур риска клиентов"/>
                                <CheckBox Content="Открытие счета анонимным владельцам / открытие 1го счета без личного присутствия"/>
                                <CheckBox Content="Преобладание высокорисковых клиентов (интенсивный оборот наличности, MSB)"/>
                                <CheckBox Content="Не проводится проверка инф-и, полученной в ходе идентификации"/>
                                <CheckBox Content="Только ручной мониторинг операций клиентов"/>
                                <CheckBox Content="Применение недостаточных мер в отношении клиентов, неоднократно осуществлявших необычные/подозрительные операции"/>
                                <CheckBox Content="Отсутствие процедур по выявлению операций, проводимых в рамках ухода от процедур контроля в целях ОД/ФТ"/>
                                <CheckBox Content="Осуществление неполной / нерегулярной оценки риска операций клиентов"/>
                                <CheckBox Content="Отсутствие процедур по выявлению операций с подставными / фиктивными компаниями (shell company)"/>
                                <CheckBox Content="Отсутствие процедур по установлению источника происхождения ден ср-в и контроля операций клиентов-ПДЛ/РДЛ/БО"/>
                                <CheckBox Content="Только ручная обработка платежей на предмет контроля страновых и санкционных ограничений"/>
                                <CheckBox Content="Отсутствие ограничений и достаточных контролей операций при принятии на обслуживание и обслуживании лиц/лиц-резидентов гос-в/тер-й, находящихся под действующими санкциями/огр-ми"/>
                                <CheckBox Content="Отсутствие ограничений и достаточных контролей операций при принятии на обслуживание и обслуживании клиентов, зарегистрированных во 2гр (офшорные)"/>
                                <CheckBox Content="Не разработаны процедуры/политики по выявлению операций с прямым или косвенным участием лиц/лиц-рез-в гос-в/тер-й, находящихся под действующими санкциями/огр-ми"/>
                                <CheckBox Content="Нарушение условий договора"/>
                            </ListView>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Итоговый балл (Уровень риска Клиента):" MinWidth="220"/>
                            <TextBox x:Name="ItogRisk" MinWidth="300" IsEnabled="False"/>
                            <Button x:Name="ItogRiskButton"   Width="150" Height="25" Content="Посчитать" IsEnabled="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Несоответствие банковских продуктов:" MinWidth="220"/>
                            <ListBox x:Name="BankProduct" Margin="5" MinWidth="300" Height="100" IsEnabled="False">
                            </ListBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="История:" Width="225"/>
                            <TextBlock Text="История" TextWrapping="Wrap" MinHeight="300" MinWidth="300" IsEnabled="False" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Right">
                            <Button x:Name="RedactHistory" Width="150" Height="25" Content="Редактировать" Click="Redact_Click"/>
                            <Button x:Name="SaveHistoryTime" Width="150" Height="25" Content="Сохранить историю" Click="SaveHistoryTime_Click"/>
                            <Button Width="150" Height="25" Content="Выгрузить историю" Click="Button_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
